<%- include('partials/header'); -%>
    <div class="container">
        <h1>My Blog Post</h1>
        <p>
            <%= blogContent %>
        </p>

        <% posts.forEach((post)=> { %>
            <h1>
                <%= post.title %>
            </h1>
            <p>
                <%= post.content.substring(0, 100) + " ..." %>
                    <a href="/blog/<%= post.title %> ">Read More</a>
            </p>
            <% }) %>

    </div>


    <%- include('partials/footer'); -%>